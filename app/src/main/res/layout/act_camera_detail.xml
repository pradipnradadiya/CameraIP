                </LinearLayout>

                <com.packetalk.utility.MyTextView
                    style="@style/detail_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zoom" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:background="@drawable/card_border"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/five_dp">


                    <ImageView
                        android:id="@+id/imgMinus"
                        style="@style/detail_plus_minus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/one_dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_remove_circle"
                        tools:ignore="ContentDescription" />

                    <SeekBar
                        android:id="@+id/seekBarZoom"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:max="10"
                        android:padding="8dp" />

                    <ImageView
                        android:id="@+id/imgPlus"
                        style="@style/detail_plus_minus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/one_dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_add_circle"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/linearAutoFocus"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_gravity="center|center_horizontal"
                        android:background="@drawable/click_effect"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imgAutoFocus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_auto_focus"
                            tools:ignore="ContentDescription" />

                        <com.packetalk.utility.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_focus"
                            android:textSize="@dimen/eight_dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgBottom"
                        style="@style/detail_img_arrow_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="@+id/linearAutoFocus"
                        app:layout_constraintStart_toStartOf="@+id/linearAutoFocus"
                        app:layout_constraintTop_toBottomOf="@+id/linearAutoFocus"
                        app:srcCompat="@drawable/ic_arrow_downward"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/imgLeft"
                        style="@style/detail_img_arrow_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/linearAutoFocus"
                        app:layout_constraintEnd_toStartOf="@+id/linearAutoFocus"
                        app:layout_constraintTop_toTopOf="@+id/linearAutoFocus"
                        app:srcCompat="@drawable/ic_arrow_back"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/imgTop"
                        style="@style/detail_img_arrow_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/linearAutoFocus"
                        app:layout_constraintEnd_toEndOf="@+id/linearAutoFocus"
                        app:layout_constraintStart_toStartOf="@+id/linearAutoFocus"
                        app:srcCompat="@drawable/ic_arrow_upward"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/imgRight"
                        style="@style/detail_img_arrow_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/linearAutoFocus"
                        app:layout_constraintStart_toEndOf="@+id/linearAutoFocus"
                        app:layout_constraintTop_toTopOf="@+id/linearAutoFocus"
