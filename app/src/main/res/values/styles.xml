<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Full screen theme-->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="btnStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_border</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="viewStyle">
        <item name="android:background">#40000000</item>
    </style>

    <style name="textStyleHomeFragmentSelectGropCamera">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/button_effect</item>
        <item name="android:paddingStart">@dimen/sixteen_dp</item>
        <item name="android:paddingEnd">@dimen/sixteen_dp</item>
        <item name="android:textColor">@color/black</item>

        <!--        <item name="android:textColor">@color/black</item>-->

    </style>

    <style name="setting_lin_layout">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_effect</item>
    </style>

    <style name="setting_txt">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/sixteen_dp</item>
    </style>

    <style name="setting_img">

    </style>

    <style name="setting_cart" parent="CardView">
        <item name="cardCornerRadius">@dimen/eight_dp</item>

    </style>


    <!--    Video Detail style-->
    <style name="detail_text">
        <item name="android:textSize">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="detail_lin_style_parent">
        <item name="android:background">@drawable/click_effect</item>
        <item name="android:layout_marginTop">2dp</item>

    </style>

    <style name="detail_lin_style_child">
        <item name="android:background">@drawable/click_effect</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="detail_img_arrow_background">
        <item name="android:background">@drawable/click_effect</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="detail_plus_minus">
        <item name="android:background">@drawable/seekbar_plus_minus</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="user_frg_meny_style">
        <item name="android:background">@drawable/button_effect</item>
    </style>

    <style name="trailer_list_item_linear">
        <item name="android:layout_marginTop">@dimen/eight_dp</item>
    </style>

    <style name="trailer_list_item_txt_title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="trailer_list_item_txt_content">
        <!--        <item name="android:textColor">@color/black</item>-->
    </style>

    <style name="img_circle_back">
        <item name="android:padding">@dimen/eight_dp</item>
        <item name="android:background">@drawable/circle_back</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ed_chart">
        <item name="android:background">@drawable/ed_round</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:ems">10</item>
        <item name="android:padding">@dimen/ten_dp</item>
        <item name="android:drawableRight">@drawable/ic_calendar</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="lin_chart">
        <item name="android:layout_marginStart">@dimen/ten_dp</item>
        <item name="android:layout_marginEnd">@dimen/ten_dp</item>
        <item name="android:layout_marginTop">@dimen/ten_dp</item>
    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="tv_chart_header_date">
        <item name="android:textAlignment">center</item>
    </style>

</resources>
